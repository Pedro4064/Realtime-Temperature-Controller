#ifndef INC_LED_H_
#define INC_LED_H_




typedef enum {
	SOLID_GREEN = 1,
	SOLID_YELLOW,
	DIM_RED,
	DIM_BLUE,
	DIM_GREEN
} Color;

typedef enum {
	ON,
	OFF
} LedStatus;


typedef struct{

	GPIO_TypeDef* gpioPort;
	char gpioPin;

}LedMapping;

void vLedInit(LedMapping solidGreenLed, LedMapping solidYellowLed, LedMapping dimRedLed, LedMapping dimBlueLed, LedMapping dimGreenLed);
void vLedTurnOn(Color ledColor);
void vLedTurnOff(Color ledColor);
void vLedToggle(Color ledColor);
void vLedSet(Color ledColor, LedStatus status);

#endif /* INC_LED_H_ */
