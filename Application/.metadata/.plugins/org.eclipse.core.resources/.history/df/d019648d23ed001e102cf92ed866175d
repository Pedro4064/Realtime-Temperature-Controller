#ifndef INC_LED_H_
#define INC_LED_H_


#define LED_SOLID_GREEN 5
#define LED_SOLID_YELLOW 4
#define LED_DIM_RED 14
#define LED_DIM_GREEN 12
#define LED_DIM_BLUE 5


typedef enum {
	SOLID_GREEN = 1,
	SOLID_YELLOW,
	DIM_RED,
	DIM_BLUE,
	DIM_GREEN
} Color;

typedef enum {
	ON,
	OFF
} LedStatus;


void vLedInit();

#endif /* INC_LED_H_ */
