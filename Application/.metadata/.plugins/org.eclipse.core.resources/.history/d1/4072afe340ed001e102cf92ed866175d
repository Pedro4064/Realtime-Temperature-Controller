#include "stm32g474xx.h"
#include "led.h"

#define _SET_MODE(GPIO, PIN) GPIO->MODER |= (1 << (PIN*2) ); GPIO->MODER &= ~(1 << (PIN*2 + 1) )


void vLedInit(LedMapping boardLeds[5]){

	 RCC->AHB2ENR |=  3;

	 _SET_MODE(GPIOA, LED_SOLID_GREEN);
	 _SET_MODE(GPIOA, LED_SOLID_YELLOW);
	 _SET_MODE(GPIOA, LED_DIM_GREEN);

	 _SET_MODE(GPIOB, LED_DIM_RED);
	 _SET_MODE(GPIOB, LED_DIM_BLUE);




}

